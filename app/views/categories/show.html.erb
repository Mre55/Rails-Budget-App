<nav class="header">
  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li>
      <a href="/"><i class="fa fa-arrow-left"></i></a>
    </li>
    <li>
      <h2 class="heading fw-bold">Category Details</h2>
    </li>
    <li>
      <%= button_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-sign-out"></i>
      <%end%>
    </li>
  </ul>
</nav>
<%=render 'layouts/errornotice'%>
<div class="p-2 category-div">
  <div class="category-info">
    <ul class="p-2 m-2">
      <li> 
        <p class="border-2 border-red-500" ><%= @category.name%></p>
      </li>
    </ul>
  </div>
  <ul class="p-2 m-2">
    <li>
      <p class="p-2 m-2 h3"> $<%= @category.expenses.sum(:amount)%></p>
    </li>
    <li>
      <%if can? :destroy, @category %>
        <%=link_to "Delete", category_path(@category.id), method: :delete, class:"btn btn-primary px-4 m-2"%>
      <%end%>
    </li>
  </ul>
</div>
<% if @category.expenses.any? %>
  <% @category.expenses.order(created_at:'DESC').each do |fd|%>
    <div class="p-2 m-3 category-div">
      <div class="category-info">
        <p> <%=image_tag @category.icon ,class:"p-1 mx-1 mt-3 rounded img-thumbnail"%></p>
        <ul class="p-2 m-1">
          <li>
            <p class="border-2 border-red-500" ><%= fd.name%></p>
          </li>
          <li> 
            <p class="border-2 border-red-500"> <%= fd.created_at.strftime("%d-%b-%Y")%></p>
          </li>
        </ul>
      </div>
      <ul class="p-2 m-1">
        <li> 
          <p class="p-2 m-2 h4" >$<%= fd.amount%></p>
        </li>
        <li>
          <%if can? :destroy, fd%>
            <%=button_to "Delete", category_expense_path(category_id: @category.id, id: fd.id), method: :delete, class:"btn btn-primary px-4 m-2"%>
          <%end%>
        </li>
      </ul>
    </div>
  <%end%>
<%else%>
  <p class="p-2 m-2 h3" >There are no transactions for this category</p>
<%end%>
<div class="w-100 py-3 px-3 btnn">
  <%= link_to "Add transaction",  new_category_expense_path(@category), class: "border-2 border-rose-500"%>
</div>
